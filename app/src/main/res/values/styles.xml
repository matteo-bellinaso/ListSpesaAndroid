<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bottone</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">@color/bottone</item>
    </style>

    <style name="regitrati_title">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/registrazione_color</item>
        <item name="android:text">@string/crea_account</item>
    </style>

    <style name="font_form">
       <item name="android:textSize">@dimen/registrati_fontsize_form</item>
        <item name="android:textColor">@color/font</item>
    </style>

    <style name="font_button_accedi">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/bottone</item>
    </style>

    <style name="font_profile">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/font</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="tutorial_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
       <item name="android:textSize">@dimen/tutorial_text_title</item>
        <item name="android:textColor">@color/fontColor</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingLeft">@dimen/padding_tutorial_title</item>
        <item name="android:paddingRight">@dimen/padding_tutorial_title</item>
        <item name="android:layout_marginTop">@dimen/margin_top_tutorial_title</item>
    </style>


    <style name="tutorial_description">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/tutorial_text_description</item>
        <item name="android:padding">@dimen/padding_tutorial_text</item>
         <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">@dimen/margin_top_tutorial_text</item>
        <item name="android:textColor">@color/fontColor</item>
    </style>

    <style name="tutorial_img">
        <item name="android:layout_width">@dimen/tutorial_img</item>
        <item name="android:layout_height">@dimen/tutorial_img</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">@dimen/padding_tutorial_title</item>
        <item name="android:layout_margin">@dimen/tutorial_img_margin</item>
    </style>

    <style name="button_tutorial">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/fontColor</item>
    </style>

    <style name="tutorial_img_bottom">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/tutorial_img_margin</item>
        <item name="android:layout_marginRight">@dimen/tutorial_img_margin</item>
    </style>
</resources>
